{
  "name": "piximoe.rs",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "type-check": "tsc --noEmit",
    "lint": "pnpm biome check src/",
    "lint:fix": "pnpm biome check --write --unsafe src/",
    "format": "pnpm biome format --write src/",
    "format:all": "pnpm biome format --write src/ && cd src-tauri && cargo fmt",
    "format:check": "pnpm biome format --write src/ && cd src-tauri && cargo fmt --all -- --check",
    "check": "pnpm type-check && pnpm lint && cd src-tauri && cargo clippy",
    "check:fix": "pnpm type-check && pnpm lint:fix && cd src-tauri && cargo clippy --fix",
    "prepare": "git config core.hooksPath .git-hooks || true",
    "setup-hooks": "chmod +x .git-hooks/pre-commit && git config core.hooksPath .git-hooks"
  },
  "dependencies": {
    "@material/web": "^2.4.1",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@tanstack/react-query": "^5.90.8",
    "@tanstack/react-query-persist-client": "^5.90.10",
    "@tanstack/react-virtual": "^3.13.12",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "^2.4.2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-store": "^2.4.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.553.0",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hot-toast": "^2.6.0",
    "react-zoom-pan-pinch": "^3.7.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@tailwindcss/postcss": "^4.1.17",
    "@tauri-apps/cli": "^2",
    "@types/node": "^24.10.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.22",
    "postcss": "^8.5.6",
    "shadcn": "^3.5.0",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.8.3",
    "vite": "^7.0.4"
  }
}
